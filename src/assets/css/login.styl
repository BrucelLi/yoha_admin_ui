@charset "UTF-8"

.web_bg{
  width:100%;
  height:100%;
  min-width: 1000px;
  z-index:-10;
  zoom: 1;
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
  background-position: center 0;

}

.web_bg_box
  width 100%
  height 100%
  display flex//flex布局
  justify-content center//使子项目水平居中
  align-items center//使子项目垂直居中
  .login_box
      width 17.5rem
      height auto
      margin 0 auto
      background-color #c6e2ff
      padding 30px 15px 10px 15px
      border 1px solid #c6e2ff
      border-radius 5px
      box-shadow 3px 3px 6px #2e2e2e
      opacity 0.8
      .login_btn
          margin 0 2px;

.login_head_box
  background-color #aaffaa
  line-height 2.5rem
  width 100%
  position absolute
  text-align right
  opacity 0.5
  padding 0 5rem

.login_head_btn
  margin 0 2px;
  color red
  opacity 1

.login_find_box
  opacity 0.8
  width 17.5rem
  height auto
  margin 0 auto
  background-color white
  padding 30px 15px 10px 15px
  border 1px solid #c6e2ff
  border-radius 5px
  box-shadow 3px 3px 6px #2e2e2e